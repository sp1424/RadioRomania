<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffa500"></solid>
                <stroke
                    android:color="@color/erieBlack"
                    android:width="1dp"></stroke>
            <corners
                android:radius="25dp"></corners>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"></padding>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#ffa500"></solid>
            <stroke
                android:color="#ffa500"
                android:width="1dp"></stroke>
            <corners
                android:radius="25dp"></corners>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"></padding>
        </shape>
    </item>

</selector>